upstream app_server {
  # Bindings to the Gunicorn server
  server 127.0.0.1:8002 fail_timeout=0;
}

server {
  
  # Access Logs
  access_log %(PROJECT_PATH)s/logs/nginx-access.log;
  error_log %(PROJECT_PATH)s/logs/nginx-error.log;

  listen   80;
  listen   [::]:80;
  listen   443 default_server ssl;

  # rewrite when http:
  if ($scheme = http) {
    return 301 https://$server_name$request_uri;
  }


  client_max_body_size 4G;
  server_name %(DOMAINS)s;

  ssl_certificate /etc/nginx/www.sheldonize.com.crt;
  ssl_certificate_key /etc/nginx/www.sheldonize.com.key;

  keepalive_timeout 5;
  root %(PROJECT_PATH)s;

  location / {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    if (!-f $request_filename) {
      proxy_pass http://app_server;
      break;
    }
  }
}
